                    asp-route-id=@Post.Id>
                    Szczegoly
                </a>
                <a class="btn btn-primary"
                    asp-action="DeleteCar"
                    asp-controller="Car"
                    asp-route-id=@Post.Id>
                    Usun
                </a>
            </td>*@
        </tr>
    }
</table>
}