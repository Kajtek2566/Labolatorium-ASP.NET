﻿@model List<Post>

<h2>Lista Postów</h2>
@if(Model.Count > 0)
{
<table class="table">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Content)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Producer)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].LicensePlateNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Owner.FirstName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Owner.LastName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Priority)
        </th>
        <th scope="col">

        </th>
    </tr>
    @foreach (var post in @Model)
    {
        <tr>
            <td>
                @post.Content
            </td>
            <td>
                @post.Autor
            </td>
            <td>
                @post.DateOfPublication
            </td>
            <td>
                @post.Owner.FirstName
            </td>
            <td>
                @post.Owner.LastName
            </td>
            <td>
                @post.Priority.GetDisplayName()
            </td>
