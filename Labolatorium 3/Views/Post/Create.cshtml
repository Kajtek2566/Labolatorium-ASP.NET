@{
}
@model Contact
@{
    ViewData["Title"] = "Create";
}

<h2>Create post</h2>
<form asp-action="" asp-controller="Post" method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div>
        Dane samochodu:
        <div>
            <label asp-for="Content"></label>
            <input class="form-control" type="text" asp-for="Content" />
            <div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Autor"></label>
            <input class="form-control" type="text" asp-for="Autor" />
            <div>
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="DateOfPublication"></label>
            <input class="form-control" type="number" asp-for="DateOfPublication" step="0.1" />
            <div>
                <span asp-validation-for="DateOfPublication" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Tags"></label>
            <input class="form-control" type="number" asp-for="Tags" />
            <div>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
        Dane kontaktowe wlasciciela:
        <div>
            <label asp-for="Owner.FirstName"></label>
            <input class="form-control" type="text" asp-for="Owner.FirstName" />
            <div>
                <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Owner.LastName"></label>
            <input class="form-control" type="text" asp-for="Owner.LastName" />
            <div>
                <span asp-validation-for="Owner.LastName" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Owner.PhoneNumber"></label>
            <input class="form-control" type="text" asp-for="Owner.PhoneNumber" />
            <div>
                <span asp-validation-for="Owner.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Owner.Email"></label>
            <input class="form-control" type="text" asp-for="Owner.Email" />
            <div>
                <span asp-validation-for="Owner.Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button class="btn" type="submit">Zapisz</button>
</form>

