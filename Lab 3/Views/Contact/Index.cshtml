@{
}
@model Dictionary<int, Contact>

<h2>Lista kontaktów</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Value.Title</td>
                <td>@item.Value.Author</td>
                <td>
                    <a asp-action="Details" asp-controller="Contact" asp-route-id="@item.Value.Id">Szczegóły</a>
                    <a asp-action="Edit" asp-controller="Contact" asp-route-id="@item.Value.Id">Edytuj</a>
                    <a asp-action="Delete" asp-controller="Contact" asp-route-id="@item.Value.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
