@{
}
@model Contact

<h2>Usuń kontakt</h2>

<form asp-action="Delete" asp-controller="Contact">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tytuł: @Model.Title</label>
    </div>

    <div class="form-group">
        <label>Autor: @Model.Author</label>
    </div>

    <p>Czy na pewno chcesz usunąć ten kontakt?</p>

    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" asp-controller="Contact" class="btn btn-primary">Anuluj</a>
</form>
