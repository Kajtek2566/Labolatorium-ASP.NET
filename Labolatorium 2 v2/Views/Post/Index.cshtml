@model Dictionary<int, Post>

<h2>Lista Postów</h2>

<table class="table">
    <tr>
        <th scope="col">
            Id
        </th>
        <th scope="col">
            Content
        </th>
        <th scope="col">
            Autor
        </th>
        <th>
            Publication_date
        </th>
        <th scope="col">
            Tags
        </th>
        <th scope="col">
            Comment
        </th>
    </tr>
    @foreach (var (i, post) in @Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @post.Content
            </td>
            <td>
                @post.Autor
            </td>
            <td>
                @post.Publication_date
            </td>
            <td>
                @post.Tags
            </td>
            <td>
                @post.Comment
            </td>
            <td>
                <a class="btn btn-primary"
                    asp-action="EditPost"
                    asp-controller="Post"
                    asp-route-id=@post.Id>
                    Edytuj
                </a>
                <a class="btn btn-primary"
                    asp-action="Details"
                    asp-controller="Post"
                    asp-route-id=@post.Id>
                    Szczegoly
                </a>
                <a class="btn btn-primary"
                    asp-action="Delete"
                    asp-controller="Post"
                    asp-route-id=@post.Id>
                    Usun
                </a>
            </td>
        </tr>
    }
</table>
